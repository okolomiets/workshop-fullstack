div(ng-include='"components/navbar/navbar.html"')

div(ng-include='"components/header/header.html"')

.container
  .row
    .col-lg-12
      p Search:
      input(ng-model="query")
      p Sort by:
      select(ng-model="orderProp")
        option(value="name") Name
        option(value="birthday") Birthday
  .row
    .col-lg-12
      h1.page-header Students:
      ul.nav.nav-tabs.nav-stacked.col-md-3.col-lg-3.col-sm-7(ng-repeat='student in students | filter:query | orderBy:orderProp')
        li
          a(href='students/{{student.id}}')
            img(ng-src='{{student.imageUrl}}', width='200')
            p {{student.name}}
            p {{student.birthday | date}}

div(ng-include='"components/footer/footer.html"')